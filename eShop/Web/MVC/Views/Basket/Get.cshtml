@model MVC.ViewModels.BasketData

@{
    ViewData["Title"] = "Basket";
}
@if(Model.Data == null)
{
}
else
{
<section class="h-100" style="background-color: #eee;">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
                </div>

        @foreach (var item in Model.Data)
        {
          <div class="card rounded-3 mb-4">
          <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="col-md-2 col-lg-2 col-xl-2">
                <img
                  src="@item.Key.PictureUrl"
                  class="img-fluid rounded-3" alt="@item.Key.Name">
              </div>
              <div class="col-md-3 col-lg-3 col-xl-3">
                <p class="lead fw-normal mb-2">@item.Key.Name</p>
                <p><span class="text-muted">Type: </span>@item.Key.CatalogType.Type <span class="text-muted">Brand: </span>@item.Key.CatalogBrand.Brand</p>
              </div>
              <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                <form asp-controller="Basket" asp-action="Change" asp-route-catalogItemId="@(item.Key.Id)" asp-route-change="false" method="post">
                <button class="btn btn-link px-2">
                  -
                </button>
                </form>
                
                <input id="form1" name="quantity" value="@item.Value" type="number" readonly
                  class="form-control form-control-sm" />

                <form asp-controller="Basket" asp-action="Change" asp-route-catalogItemId="@(item.Key.Id)" asp-route-change="true" method="post">
                <button class="btn btn-link px-2">
                  +
                </button>
                </form>

              </div>
              <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                <h5 class="mb-0">@((item.Value * item.Key.Price))</h5>
              </div>
              <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                <a asp-controller="Basket" asp-action="Delete" asp-route-catalogItemId="@(item.Key.Id)" method="post" class="text-danger">
                    <img src="~/images/trashdelete.png" width="30" height="30" alt="delete"/>
                </a>
              </div>
            </div>
          </div>
        </div>
        }

        <div class="card mb-4">
          <div class="card-body p-4 d-flex flex-row">
            <div class="form-outline flex-fill">
              <input type="text" id="form1" class="form-control form-control-lg" value="Discount code"/>
              <label class="form-label" for="form1"></label>
            </div>
            <button type="button" class="btn btn-outline-warning btn-lg ms-3">Apply</button>
          </div>
        </div>

        <div class="card">
          <div class="card-body">
            <button type="button" class="btn btn-warning btn-block btn-lg">Proceed to Pay</button>
          </div>
        </div>

            </div>
        </div>
    </div>
</section>

}


