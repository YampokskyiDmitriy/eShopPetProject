@model MVC.ViewModels.CatalogViewModels.ItemInfoPageViewModel

<div class="row py-5 g-5">
    <div class="col-12 col-lg-6">
        <img 
            src="@Model.Item.PictureUrl"
            class="m-1 sliderMainImage"
            data-bs-toggle="modal"
            data-bs-target="#imageModal"
        />
        <div>
            <img
                src="@Model.Item.PictureUrl"
                width="60"
                class="m-1 sliderThumb"
            />
            <img
                src="@Model.Item.PictureUrl"
                width="60"
                class="m-1 sliderThumb"
            />
        </div>
    </div>
    <div class="col-12 col-lg-6">
        <h2 id="productName">
            @Model.Item.Name
        </h2>
        <small class="text-muted">
            Article: @Model.Item.Id
        </small>
        <h4 class="my-4">
            USD
            <span id="price">@Model.Item.Price</span>
            $
        </h4>
        <div class="d-grid my-4">
            <form asp-controller="Basket" asp-action="Add" 
            asp-route-catalogItemId="@(Model.Item.Id)"
            asp-route-countItems="1"  method="post">
            <input class="btn btn-lg btn-dark"
            type="submit" id="bagBtn"
            value="[Add to basket]">
            </form>
        </div>
        <div class="accordion">
            <div class="accordion-item">
                <h2
                    class="accordion-header"
                    id="headingOne"
                >
                <button 
                    class="accordion-button"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseOne"
                    aria-expanded="true"
                    aria-controls="collapseOne"
                >
                <strong>Description</strong>
                </button>
                </h2>
                <div
                    id="collapseOne"
                    class="
                        accordion-collapse 
                        collapse show"
                    aria-labelledby="headingOne"
                >
                    <div class="accordion-body">
                        @Model.Item.Description
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2
                    class="accordion-header"
                    id="headingTwo"
                >
                <button 
                    class="accordion-button collapsed"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseTwo"
                    aria-expanded="false"
                    aria-controls="collapseTwo"
                >
                    <strong>
                        Available In Store
                    </strong>
                </button>
                </h2>
                <div
                    id="collapseTwo"
                    class="
                        accordion-collapse 
                        collapse"
                    aria-labelledby="headingTwo"
                >
                    <div class="accordion-body">
                        @Model.Item.AvailableStock
                        <br />
                        <br />
                        Check with the seller
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2
                    class="accordion-header"
                    id="headingThree"
                >
                <button 
                    class="accordion-button collapsed"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseThree"
                    aria-expanded="false"
                    aria-controls="collapseThree"
                >
                    <strong>
                        Type/Brand
                    </strong>
                </button>
                </h2>
                <div
                    id="collapseThree"
                    class="
                        accordion-collapse 
                        collapse"
                    aria-labelledby="headingThree"
                >
                    <div class="accordion-body">
                        Type: @Model.Item.CatalogType.Type
                        <br />
                        Brand: @Model.Item.CatalogBrand.Brand
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2
                    class="accordion-header"
                    id="headingFour"
                >
                <button 
                    class="accordion-button collapsed"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseFour"
                    aria-expanded="false"
                    aria-controls="collapseFour"
                >
                    <strong>
                        Type/Brand
                    </strong>
                </button>
                </h2>
                <div
                    id="collapseFour"
                    class="
                        accordion-collapse 
                        collapse"
                    aria-labelledby="headingFour"
                >
                    <div class="accordion-body">
                        @await Component.InvokeAsync("CommentsComponent", new { id = Model.Item.Id })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>