@model MVC.ViewModels.Admin.TypeUpdatePageViewModel

<form asp-controller="Admin" asp-action="TypeUpdate" method="post">
	<input name="Id" type="hidden" value=@Model.Type.Id />
	<label>
		<p>Id: @Model.Type.Id</p>
    </label>
	<br />
	<label>
		Name: <input name="Name" type="text" value="@Model.Type.Type" ></input>
    </label>
	<br />
	<p><input type="submit" value="send" /> </p>
</form>
<br />
<form asp-controller="Admin" asp-action="RemoveType"
	asp-route-id=@Model.Type.Id method="post">
	<p><input type="submit" value="Delete" /> </p>
</form> 